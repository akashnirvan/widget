<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1e293b"
    android:padding="8dp">

    <!-- Row 1: Header + Refresh Button -->
    <TextView
        android:id="@+id/widget_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="JioFi"
        android:textSize="12sp"
        android:textColor="#94a3b8"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/btn_refresh"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@android:drawable/ic_popup_sync"
        android:layout_alignParentEnd="true"
        android:contentDescription="Refresh"
        android:clickable="true" 
        android:tint="#f8fafc"/>

    <!-- Row 2: Main Battery Info -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_below="@id/widget_title"
        android:layout_marginTop="4dp">

        <!-- Thunderbolt Icon (Hidden unless charging) -->
        <ImageView
            android:id="@+id/icon_charging"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@android:drawable/stat_sys_warning"
            android:tint="#22c55e"
            android:visibility="gone"
            android:layout_marginEnd="4dp"/>

        <ProgressBar
            android:id="@+id/progress_battery"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="8dp"
            android:layout_weight="1"
            android:max="100"
            android:progress="60"
            android:progressTint="#2563eb"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:id="@+id/text_percentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--%"
            android:textColor="#f8fafc"
            android:textStyle="bold"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/text_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/widget_title"
        android:layout_centerHorizontal="true"
        android:text="Offline"
        android:textColor="#ef4444"
        android:textSize="10sp"
        android:visibility="gone"/>

</RelativeLayout>
