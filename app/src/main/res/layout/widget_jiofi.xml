<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background"
    android:padding="12dp"
    android:id="@+id/widget_root">

    <!-- Header Row: Title + Refresh Button -->
    <TextView
        android:id="@+id/widget_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="JioFi"
        android:textSize="11sp"
        android:textColor="@color/text_secondary"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <ImageView
        android:id="@+id/btn_refresh"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_refresh"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/refresh"
        android:clickable="true" />

    <!-- Main Content Row -->
    <LinearLayout
        android:id="@+id/content_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_below="@id/widget_title"
        android:layout_marginTop="8dp">

        <!-- Battery Icon -->
        <ImageView
            android:id="@+id/icon_battery"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_battery_normal"
            android:layout_marginEnd="8dp"/>

        <!-- Progress Bar + Percentage Wrapper -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ProgressBar
                android:id="@+id/progress_battery"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:max="100"
                android:progress="0"
                android:progressDrawable="@drawable/progress_bar_style"/>

            <TextView
                android:id="@+id/text_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tap to refresh"
                android:textColor="@color/text_secondary"
                android:textSize="10sp"
                android:layout_marginTop="2dp"/>
        </LinearLayout>

        <!-- Percentage Text -->
        <TextView
            android:id="@+id/text_percentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--"
            android:textColor="@color/text_primary"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

</RelativeLayout>
